            { id: 50, q: "Î£Ï…ÏƒÏ„Î¿Î»Î¹ÎºÎ® 160, Î”Î¹Î±ÏƒÏ„Î¿Î»Î¹ÎºÎ® 100. ÎœÎ­ÏƒÎ· Î±ÏÏ„Î·ÏÎ¹Î±ÎºÎ®;", options: ["130", "110", "120", "140"], correct: 2, rationale: "MAP = DBP + 1/3(SBP - DBP) = 100 + 20 = 120." }
        ];

        let currentIdx = 0;
        let userAnswers = new Array(questions.length).fill(null);
        let checkedQuestions = new Array(questions.length).fill(false);

        const quizContainer = document.getElementById('quizContainer');
        const navGrid = document.getElementById('navGrid');
        const progressText = document.getElementById('progressText');
        const progressBar = document.getElementById('progressBar');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const themeToggle = document.getElementById('themeToggle');

        // Theme Setup
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
            document.documentElement.classList.add('dark');
        }

        themeToggle.addEventListener('click', () => {
            document.documentElement.classList.toggle('dark');
        });

        // Initialize Navigation Sidebar
        function initNav() {
            navGrid.innerHTML = '';
            questions.forEach((q, i) => {
                const btn = document.createElement('button');
                btn.textContent = q.id;
                btn.className = `h-10 w-full rounded-lg border font-medium text-sm transition-all duration-200 
                                ${i === currentIdx ? 'border-primary bg-primary/10 text-primary ring-2 ring-primary ring-offset-2 dark:ring-offset-slate-900' : 'border-slate-200 dark:border-slate-800 hover:border-primary'}`;
                btn.onclick = () => jumpTo(i);
                btn.id = `nav-btn-${i}`;
                navGrid.appendChild(btn);
            });
            updateNavColors();
        }

        function updateNavColors() {
            questions.forEach((q, i) => {
                const btn = document.getElementById(`nav-btn-${i}`);
                if (userAnswers[i] !== null) {
                    btn.classList.add('bg-slate-100', 'dark:bg-slate-800');
                    if (checkedQuestions[i]) {
                        if (userAnswers[i] === questions[i].correct) {
                            btn.classList.add('!border-secondary', '!text-secondary', '!bg-emerald-50', 'dark:!bg-emerald-950/20');
                        } else {
                            btn.classList.add('!border-red-500', '!text-red-500', '!bg-red-50', 'dark:!bg-red-950/20');
                        }
                    }
                }
            });
        }

        function renderQuestion() {
            const q = questions[currentIdx];
            quizContainer.innerHTML = `
                <div class="bg-white dark:bg-slate-900 p-6 lg:p-8 rounded-2xl border border-slate-200 dark:border-slate-800 shadow-sm transition-all">
                    <div class="flex items-center gap-3 mb-6">
                        <span class="px-3 py-1 rounded-full bg-primary/10 text-primary text-xs font-bold uppercase tracking-widest">Î•ÏÏÏ„Î·ÏƒÎ· ${q.id}</span>
                    </div>
                    <h3 class="text-xl lg:text-2xl font-bold leading-tight mb-8">${q.q}</h3>
                    <div class="space-y-3">
                        ${q.options.map((opt, i) => `
                            <button onclick="selectOption(${i})" 
                                class="w-full text-left p-4 rounded-xl border-2 transition-all flex items-center justify-between group
                                ${userAnswers[currentIdx] === i ? 'border-primary bg-primary/5' : 'border-slate-100 dark:border-slate-800 hover:border-slate-300 dark:hover:border-slate-700'}
                                ${checkedQuestions[currentIdx] && i === q.correct ? '!border-secondary !bg-emerald-50 dark:!bg-emerald-950/20' : ''}
                                ${checkedQuestions[currentIdx] && userAnswers[currentIdx] === i && i !== q.correct ? '!border-red-500 !bg-red-50 dark:!bg-red-950/20' : ''}
                                ${checkedQuestions[currentIdx] ? 'pointer-events-none' : ''}">
                                <span>${opt}</span>
                                <div class="w-6 h-6 rounded-full border flex items-center justify-center transition-colors
                                    ${userAnswers[currentIdx] === i ? 'border-primary bg-primary text-white' : 'border-slate-300 dark:border-slate-600'}">
                                    ${userAnswers[currentIdx] === i ? 'âœ“' : ''}
                                </div>
                            </button>
                        `).join('')}
                    </div>
                    
                    ${!checkedQuestions[currentIdx] && userAnswers[currentIdx] !== null ? `
                        <button onclick="checkAnswer()" class="mt-8 w-full py-4 rounded-xl bg-slate-900 dark:bg-slate-100 dark:text-slate-900 text-white font-bold hover:scale-[1.01] active:scale-[0.99] transition-all">
                            ÎˆÎ»ÎµÎ³Ï‡Î¿Ï‚ Î‘Ï€Î¬Î½Ï„Î·ÏƒÎ·Ï‚
                        </button>
                    ` : ''}

                    ${checkedQuestions[currentIdx] ? `
                        <div class="mt-8 p-5 rounded-xl bg-slate-50 dark:bg-slate-800/50 border border-slate-200 dark:border-slate-700 animate-in fade-in duration-500">
                            <p class="font-bold mb-2 flex items-center gap-2">
                                ${userAnswers[currentIdx] === q.correct ? '<span class="text-secondary">Î£Ï‰ÏƒÏ„ÏŒ!</span>' : '<span class="text-red-500">Î›Î¬Î¸Î¿Ï‚.</span>'}
                            </p>
                            <p class="text-slate-600 dark:text-slate-400 text-sm leading-relaxed">${q.rationale}</p>
                        </div>
                    ` : ''}
                </div>
            `;
            
            updateProgress();
            updateControls();
            initNav();
        }

        function selectOption(idx) {
            userAnswers[currentIdx] = idx;
            renderQuestion();
        }

        function checkAnswer() {
            checkedQuestions[currentIdx] = true;
            renderQuestion();
        }

        function jumpTo(idx) {
            currentIdx = idx;
            renderQuestion();
        }

        function updateProgress() {
            const answered = userAnswers.filter(a => a !== null).length;
            progressText.textContent = `${answered}/${questions.length}`;
            progressBar.style.width = `${(answered / questions.length) * 100}%`;
        }

        function updateControls() {
            prevBtn.disabled = currentIdx === 0;
            nextBtn.disabled = currentIdx === questions.length - 1;
        }

        prevBtn.onclick = () => { if (currentIdx > 0) jumpTo(currentIdx - 1); };
        nextBtn.onclick = () => { if (currentIdx < questions.length - 1) jumpTo(currentIdx + 1); };

        // Initial render
        window.onload = renderQuestion;
    </script>
</body>
</html>
